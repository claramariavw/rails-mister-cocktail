<div class = "container">
  <h3>Ingredients:</h3>


  <div class = "card-cocktail">
    <div>
      <h1><%=@cocktail.name%></h1>
    </div>
    <div>
      <%@cocktail.doses.each do |dose|%>
      <div class ="r">
        <div class="c">
          <p><%=dose.description%> <%=dose.ingredient.name%></p>
        </div>
        <div class="c">
          <%=link_to "Remove", cocktail_dose_path(dose),method: :delete %>
        </div>
      </div>
      <%end%>
    </div>
  </div>
  <br>
  <div> <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %></div>
</div>

